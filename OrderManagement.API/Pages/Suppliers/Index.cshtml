@page
@model OrderManagement.API.Pages.Suppliers.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Supplier.ElementAt(0).Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier.ElementAt(0).AddressLine1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier.ElementAt(0).AddressLine2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier.ElementAt(0).City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier.ElementAt(0).PostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier.ElementAt(0).IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier.ElementAt(0).StateName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Supplier) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressLine1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressLine2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StateName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
